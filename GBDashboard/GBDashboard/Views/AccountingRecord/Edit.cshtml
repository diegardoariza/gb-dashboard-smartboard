@model GBDashboard.Accounting_Record

@{
    ViewBag.Title = "Edit Accounting Records";
}

<h2>Edit Accounting Records</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Accounting Record</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.accounting_record_id)

        @Html.HiddenFor(model => model.customer_id)

        <div class="form-group">
            @Html.Label( "Record Date", htmlAttributes: new { @class = "control-label col-md-2" })
            @*@Html.LabelFor(model => model.record_date, htmlAttributes: new { @class = "control-label col-md-2" })*@
