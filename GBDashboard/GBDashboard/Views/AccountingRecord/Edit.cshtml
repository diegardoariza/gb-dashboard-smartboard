                @Html.EditorFor(model => model.record_date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.record_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label( "Amount", htmlAttributes: new { @class = "control-label col-md-2" })
            @*@Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "control-label col-md-2" })*@
